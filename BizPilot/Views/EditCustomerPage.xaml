<Page x:Class="BizPilot.Views.EditCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Επεξεργασία Πελάτη"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Όνομα -->
            <TextBlock Text="Όνομα:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="FirstNameBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <!-- Επώνυμο -->
            <TextBlock Text="Επώνυμο:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <!-- Email -->
            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <TextBox  Style="{StaticResource RoundedTextBoxStyle}" x:Name="EmailBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <!-- Τηλέφωνο -->
            <TextBlock Text="Τηλέφωνο:" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="PhoneBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <!-- Διεύθυνση -->
            <TextBlock Text="Διεύθυνση:" Grid.Row="4" Grid.Column="0" Margin="5"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="AddressBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <!-- Ημερομηνία Γέννησης -->
            <TextBlock Text="Ημ. Γέννησης:" Grid.Row="5" Grid.Column="0" Margin="5"/>
            <DatePicker x:Name="BirthDatePicker" Grid.Row="5" Grid.Column="1" Margin="5"/>


            <!-- Φύλο -->
            <TextBlock Text="Φύλο:" Grid.Row="6" Grid.Column="0" Margin="5"/>
            <ComboBox x:Name="GenderComboBox" Grid.Row="6" Grid.Column="1" Margin="5">
                <ComboBoxItem Content="Άνδρας"/>
                <ComboBoxItem Content="Γυναίκα"/>
                <ComboBoxItem Content="Άλλο"/>
            </ComboBox>

            <!-- Σημειώσεις -->
            <TextBlock Text="Σημειώσεις:" Grid.Row="7" Grid.Column="0" Margin="5"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="NotesBox"
                     Grid.Row="7"
                     Grid.Column="1"
                     Height="60"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Margin="5"/>

            <!-- Κουμπιά -->
            <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Αποθήκευση Αλλαγών"
                        Click="SaveChanges_Click"
                        Style="{StaticResource MainButtonStyle}"/>
                <Button Content="Ακύρωση"
                        Click="Cancel_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
