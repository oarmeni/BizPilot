<Page x:Class="BizPilot.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:BizPilot.Views"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Dashboard">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="#FF2D2D30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top: Logo -->
                <RowDefinition Height="*"/>
                <!-- Middle: Menu -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom: Logout -->
            </Grid.RowDefinitions>

            <!-- Logo -->
            <TextBlock Text="BizPilot" Foreground="White" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="10"/>

            <!-- Main Menu -->
            <StackPanel Grid.Row="1">
                <Button Content="Αρχική" Click="HomeButton_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Πελάτες" Click="CustomersButton_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Ραντεβού" Click="AppointmentsButton_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Υπηρεσίες" Click="ServicesButton_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Ρυθμίσεις" Click="SettingsButton_Click" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>

            <!-- Logout Button at bottom -->
            <StackPanel Grid.Row="2" Margin="10">
                <Button Content="Αποσύνδεση"
                        Click="LogoutButton_Click"
                        Style="{StaticResource LogoutButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
