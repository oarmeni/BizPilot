<Page x:Class="BizPilot.Views.UserSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Ρυθμίσεις Χρηστών">

    <Grid>
        <StackPanel Margin="20">
            <!--Τίτλος-->
            <TextBlock Text="Ρυθμίσεις Χρηστών"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <!--Αναζήτηση και Προσθήκη-->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Border CornerRadius="6"
                        Background="White"
                        BorderBrush="DodgerBlue"
                        BorderThickness="1.5"
                        Width="250"
                        Height="32"
                        Margin="0,0,10,0">
                    <DockPanel>
                        <Image Source="/Images/search_icon.png"
                               Width="16"
                               Height="16"
                               Margin="6,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>
                        <TextBox x:Name="SearchBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 FontSize="14"
                                 Foreground="Gray"
                                 Padding="2"
                                 TextChanged="SearchBox_TextChanged"/>
                    </DockPanel>
                </Border>
                <Button Content="➕ Προσθήκη Χρήστη"
                        Click="AddUser_Click"
                        Style="{StaticResource MainButtonStyle}"/>
            </StackPanel>
            <!-- Πίνακας Χρηστών -->
            <DataGrid x:Name="UsersGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      MouseDoubleClick="UsersGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Password" Binding="{Binding HiddenPassword}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        
    </Grid>
</Page>
