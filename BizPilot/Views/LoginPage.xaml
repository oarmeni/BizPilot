<Page x:Class="BizPilot.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Black">

    <Grid>
        <!-- Background Image -->
        <Image Source="pack://application:,,,/Images/background.png" 
               Stretch="Fill" 
               Opacity="0.5" 
               Panel.ZIndex="0" />


        <!-- Semi-transparent Login Form -->
        <Border Background="#CCFFFFFF"
                CornerRadius="10"
                Padding="20"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1">
            <StackPanel>
                <TextBlock Text="Καλωσήρθατε στο BizPilot"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Όνομα χρήστη:" Foreground="Black"/>
                <TextBox Style="{StaticResource RoundedTextBoxStyle}" Width="250" x:Name="UsernameBox" Margin="0,5,0,15"/>

                <TextBlock Text="Κωδικός:" Foreground="Black"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource RoundedPasswordBoxStyle}"
                    Width="250"
                    Margin="0,10"
                    PasswordChar="●"/>

                <Button Content="Είσοδος"
                        Click="LoginButton_Click"
                        Width="150"
                        HorizontalAlignment="Center"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>