<Page x:Class="BizPilot.Views.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Επεξεργασία Χρήστη">

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Επεξεργασία Χρήστη"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!--Username-->
            <TextBlock Text="Όνομα Χρήστη:"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="UsernameBox" Margin="0,5,0,15"/>

            <!--Password (new)-->
            <TextBlock Text="Νέος Κωδικός:"/>
            <PasswordBox Style="{StaticResource RoundedPasswordBoxStyle}"
                 Width="250"
                 Margin="0,10"
                 PasswordChar="●"/>
            <TextBlock Text="Επιβεβαίωση Νέου Κωδικού:"/>
            <PasswordBox x:Name="Password1Box"
                Style="{StaticResource RoundedPasswordBoxStyle}"
                Width="250"
                Margin="0,10"
                PasswordChar="●"/>
            <!--Buttons-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Αποθήκευση"
                        Click="Save_Click"
                        Style="{StaticResource MainButtonStyle}"
                        Margin="5"/>
                <Button Content="Διαγραφή"
                        Click="Delete_Click"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"/>
                <Button Content="Ακύρωση"
                        Click="Cancel_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

