<Page x:Class="BizPilot.Views.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Πελάτες">

    <Grid>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Border CornerRadius="6"
                    Background="White"
                    BorderBrush="DodgerBlue"
                    BorderThickness="1.5"
                    Width="250"
                    Height="32"
                    Margin="0,0,10,0">
                    <DockPanel>
                        <Image Source="/Images/search_icon.png"
                        Width="16"
                        Height="16"
                        Margin="6,0"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"/>
                        <TextBox x:Name="SearchBox"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="Gray"
                            Padding="2"
                            TextChanged="SearchBox_TextChanged"/>
                    </DockPanel>
                </Border>
                <Button Content="➕ Νέος Πελάτης"
                        Click="AddCustomer_Click"
                        Style="{StaticResource MainButtonStyle}"/>
            </StackPanel>

            <DataGrid x:Name="CustomersGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      MouseDoubleClick="CustomersGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Όνομα" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Επώνυμο" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Τηλέφωνο" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>

