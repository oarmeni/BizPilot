<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="BizPilot.Views.EditAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Επεξεργασία Ραντεβού">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Επεξεργασία Ραντεβού"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <StackPanel Grid.Row="1" Margin="20" HorizontalAlignment="Center" Width="460">
            <TextBlock x:Name="CancelledMessage"
                       Text="⚠ Το ραντεβού είναι ήδη ακυρωμένο"
                       Foreground="Red"
                       FontWeight="Bold"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Πελάτης:" FontWeight="Bold"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="CustomerNameBox" Margin="0,5,0,15"/>

            <TextBlock Text="Ημερομηνία:" FontWeight="Bold"/>
            <DatePicker x:Name="AppointmentDatePicker" Margin="0,5,0,15"/>

            <TextBlock Text="Ώρα:" FontWeight="Bold"/>
            <ComboBox x:Name="AppointmentTimeBox" Margin="0,5,0,15"/>

            <TextBlock Text="Σημειώσεις:" FontWeight="Bold"/>
            <TextBox  Style="{StaticResource RoundedTextBoxStyle}" x:Name="NotesBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="SaveButton"
                        Content="Αποθήκευση"
                        Click="Save_Click"
                        Style="{StaticResource MainButtonStyle}"
                        Margin="5"/>

                <Button Content="Ακύρωση"
                        Click="Cancel_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="5"/>

                <Button x:Name="CancelAppointmentButton"
                        Content="Ακύρωση Ραντεβού"
                        Click="CancelAppointment_Click"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"
                        Padding="10,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
