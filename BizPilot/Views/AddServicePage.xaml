<Page x:Class="BizPilot.Views.AddServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Προσθήκη Υπηρεσίας">

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Προσθήκη Υπηρεσίας"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <!-- Ονομασία -->
            <TextBlock Text="Ονομασία:"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="NameBox" Margin="0,5,0,15"/>
            <!--Περιγραφή-->
            <TextBlock Text="Περιγραφή:"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="DescriptionBox"
                     Height="40"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5,0,15"/>
            <!--Τιμή-->
            <TextBlock Text="Τιμή (€):"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="CostBox" Margin="0,5,0,15"/>
            <!--Κουμπιά-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Αποθήκευση"
                        Click="Save_Click"
                        Style="{StaticResource MainButtonStyle}"
                        Margin="5"/>
                <Button Content="Ακύρωση"
                        Click="Cancel_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
