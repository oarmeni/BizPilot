<Page x:Class="BizPilot.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:BizPilot.Views"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Στατιστικά" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>
            <UniformGrid Columns="2" Rows="2" Margin=" 0 0 0 20">
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Σύνολο Πελατών" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalCustomers}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Σύνολο Ραντεβού" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalAppointments}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Ραντεβού Σήμερα" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TodaysAppointments}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Ολοκληρωμένα Ραντεβού" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CompletedAppointments}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>

