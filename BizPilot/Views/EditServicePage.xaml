<Page x:Class="BizPilot.Views.EditServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PrimaryBackgroundBrush}"
      Foreground="{DynamicResource PrimaryForegroundBrush}"
      Title="Επεξεργασία Υπηρεσίας">

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Επεξεργασία Υπηρεσίας"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Ονομασία:" FontWeight="Bold"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="NameBox" Margin="0,5,0,15"/>

            <TextBlock Text="Περιγραφή:" FontWeight="Bold"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="DescriptionBox"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5,0,15"/>

            <TextBlock Text="Τιμή (€):" FontWeight="Bold"/>
            <TextBox Style="{StaticResource RoundedTextBoxStyle}" x:Name="CostBox" Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Αποθήκευση"
                        Click="Save_Click"
                        Style="{StaticResource MainButtonStyle}"
                        Margin="5"/>
                <Button Content="Διαγραφή"
                        Click="Delete_Click"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="5"/>
                <Button Content="Ακύρωση"
                        Click="Cancel_Click"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

